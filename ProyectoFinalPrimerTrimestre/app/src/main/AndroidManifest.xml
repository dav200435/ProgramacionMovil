<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.proyectofinalprimertrimestre">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoFinalPrimerTrimestre"
        tools:targetApi="31">

        <!-- LoginActivity como la actividad principal -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"> <!-- AquÃ­ se establece android:exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity como actividad secundaria -->
        <activity android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoFinalPrimerTrimestre" />

        <!-- AddProductActivity -->
        <activity android:name=".AddProductActivity"
            android:exported="true" />

        <!-- DeleteProductActivity -->
        <activity android:name=".DeleteProductActivity"
            android:exported="true" />

        <!-- EditProductActivity -->
        <activity android:name=".EditProductActivity"
            android:exported="true" />
    </application>

</manifest>
